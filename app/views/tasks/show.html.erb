<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <input type="checkbox" name="task_checkbox" checked> This task is completed
<% else %>
  <input type="checkbox" name="task_checkbox"> This task is not completed yet
<% end %>

<p><%= link_to 'Edit task', edit_task_path %></p>

<p><%= link_to 'Return to index page', tasks_path %></p>
